
public class Solution extends GuessGame {
    public int bs(int n) {
        int l = 1;
        int h = n;
        while (l <= h) {
            int mid = l+(h - l) / 2;
            int k = guess(mid);
            if (k == 0) {
                return  mid;
            } else if (k == -1) {
                h = mid - 1;
            } else if (k == 1) {
                l = mid + 1;
            }
        }
        return -1;
    }

    public int guessNumber(int n) {
        return bs(n);
    }
}
